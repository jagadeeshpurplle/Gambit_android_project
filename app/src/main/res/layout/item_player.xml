<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/pager_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/top_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="@dimen/profile_size"
                    android:layout_height="@dimen/profile_size"
                    android:src="@drawable/profile"
                    android:layout_centerVertical="true"
                    />


                <LinearLayout
                    android:id="@+id/layout_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tv_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lakers"
                        android:textColor="@color/first_name"
                        android:textStyle="bold"
                        android:textSize="@dimen/ts_first_name"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:id="@+id/tv_team_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ts_last_name"
                        android:textColor="@color/last_name"
                        android:textStyle="bold"
                        android:text="#14"
                        android:paddingLeft="5dp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/iv_image"
                    android:layout_toLeftOf="@id/layout_right"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tv_first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:textColor="@color/first_name"
                        android:textStyle="bold"
                        android:textSize="@dimen/ts_first_name"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:id="@+id/tv_last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ts_last_name"
                        android:textColor="@color/last_name"
                        android:textStyle="bold"
                        android:text="Last Name"
                        android:paddingLeft="5dp"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/top_view"
                android:background="@drawable/light_blue_drawable"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position - PG"
                    android:textColor="@color/first_name"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/point"/>

                <TextView
                    android:id="@+id/tv_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Golden State "
                    android:textColor="@color/first_name"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/point"/>

                <TextView
                    android:id="@+id/tv_conference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conference"
                    android:textColor="@color/first_name"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>